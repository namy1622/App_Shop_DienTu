<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4E8AC5"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="35dp"
        android:background="@drawable/border_status"
        android:layout_width="match_parent"
        android:layout_height="55dp">


        <EditText
            android:id="@+id/edittextSearch"
            android:layout_marginTop="2dp"
            android:background="@drawable/border"
            android:layout_marginLeft="10dp"
            android:textColor="#070101"
            android:hint="   City, State"

            android:textColorHint= "#99A6BD"
            android:layout_width="290dp"
            android:layout_height="40dp"/>

        <Button
            android:id="@+id/buttonSearch"
            android:text="Tìm"
            android:layout_marginTop="3dp"
            android:backgroundTint="#2A72BA"
            android:textStyle="bold"
            android:textSize="21dp"
            android:textColor="#EAEDF1"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textviewCity"
        android:textColor="#EAEDF1"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Tên thành phố: "
        android:textStyle="bold"

        android:textSize="20dp"
        android:layout_marginTop="25dp">

    </TextView>
    <TextView
        android:id="@+id/textviewCountry"
        android:textColor="#EAEDF1"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Tên  đất nước: "
        android:textStyle="bold"

        android:textSize="20dp"
        android:layout_marginTop="10dp">

    </TextView>

    <ImageView
        android:id="@+id/imageIcon"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="150dp"/>

    <TextView
        android:id="@+id/textviewTemp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textColor="#EAEDF1"
        android:textSize="28dp"
        android:textStyle="bold"

        android:text="Nhiệt độ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/status"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="Trạng thái"
        android:textColor="#EAEDF1"
        android:textStyle="bold"

        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="3"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/border_status"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" >
            <ImageView
                android:id="@+id/cloud"
                android:src="@drawable/doam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textviewHumidity"
                android:textSize="18dp"
                android:text="Độ ẩm"
                android:textColor="#EAEDF1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/border_status"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/huminity"

                android:src="@drawable/cloud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textviewCloud"
                android:textSize="18dp"
                android:text="Mây"
                android:textColor="#EAEDF1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:gravity="center"
            android:background="@drawable/border_status"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/mill"
                android:src="@drawable/fan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textviewWind"
                android:textSize="18dp"
                android:text="Gió"
                android:textColor="#EAEDF1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </LinearLayout>
    <TextView
        android:layout_marginTop="40dp"
        android:layout_gravity="center"

        android:text="Ngày cập nhật: "
        android:textStyle="bold"

        android:textColor="#EAEDF1"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/textviewDay"
        android:text="Ngày - Tháng Năm  "
        android:textStyle="bold"

        android:textColor="#EAEDF1"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/buttonchangeActivity"
        android:text="Các ngày tiếp theo"
        android:textSize="24dp"
        android:textColor="#EAEDF1"
        android:layout_marginTop="130dp"
        android:backgroundTint="#2A72BA"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>